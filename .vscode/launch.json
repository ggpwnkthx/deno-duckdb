// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno: Run main.ts",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/main.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "--allow-all"
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    }
  ]
}
